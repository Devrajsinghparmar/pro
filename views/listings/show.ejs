<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-3 mt-4 ">

        <h3><%= listing.title%></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top show-img"
            alt="listing-image">
        <div class="card-body">
            <p class="card-text">

                <%= listing.description%> <br>
                &#8377;
                <% if (listing.price != null) { %>
                <%= listing.price.toLocaleString("en-IN") %>
                <% } else { %>
                N/A
                <% } %>
                <br>
                <%= listing.location%> <br>
                <%= listing.country%> <br>
            </p>
        </div>
    </div>

    <br>


    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-2 offset-3 edit-btn">Edit</a>


        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-9 ">Delete</button>

        </form>
    </div class="mb-3 mt-3">


    <!--------------------- for review ---------------------->

    <hr class="mt-4">
    <div class="col-8 offset-3 mt-4">
        <h4>Leave a Reating</h4>
        <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label"> Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" velue="3"
                    required>
            </div>
            <div>
                <label for="comment" class="form-label  ">Coments.</label>
                <textarea name="review[comment]" id="comment" cols="25" rows="3" class="form-control"
                    required></textarea>
                <div class="invalid-feedback">
                    Pleace subbmin some comment for review
                </div>
            </div>
            <button class="btn btn-outline-dark mt-4 mb-3 ">submit</button>
        </form>

        <hr>
        <p><b> All Riview</b></p>
        <div class="row">
            <% for(review of listing.reviews){%>
            <div class="card mt-2 mb-2 ms-2 col-5">
                <div class="card-body">
                    <h5 class="card-title"> deva</h5>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text"> <%= review.rating%> Stars</p>
                </div>
                <form  class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
            <%}%>
    </div>
</div>   
</div>